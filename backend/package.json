{
  "name": "livraria-api",
  "version": "1.0.0",
  "type": "module",
  "description": "API para catálogo de livros com avaliações",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "npx prisma migrate dev --name init --schema=./prisma/schema.prisma",
    "seed": "node prisma/seed.js",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "build": "npm run prisma:generate && npm run prisma:migrate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.0.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}